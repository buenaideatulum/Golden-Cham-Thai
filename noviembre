<script>
let index = 0;
const slides = document.querySelectorAll('.slide');
function showSlide(i){ slides.forEach(s=>s.classList.remove('active')); slides[i].classList.add('active'); }
function changeSlide(d){ index=Math.max(0,Math.min(slides.length-1,index+d)); showSlide(index);} 
new Chart(starsChart,{type:'bar',data:{labels:['5 â­'],datasets:[{data:[23],backgroundColor:'#10b981'}]}});
new Chart(deviceChart,{type:'doughnut',data:{labels:['Android','iPhone'],datasets:[{data:[11,2]}]}});
new Chart(timelineChart,{type:'bar',data:{labels:['Feedback Positivo','Feedback Negativo'],datasets:[{data:[11,2],backgroundColor:['#10b981','#ef4444']}]} });
</script>
